<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="form_view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="replace">
                 <group attrs="{'invisible': [('type', '=', 'lead')]}">
                                <field name="partner_id"
                                    widget="res_partner_many2one"
                                    string="Propietario"
                                    context="{'res_partner_search_mode': type == 'opportunity' and 'customer' or False,
                                        'default_name': x_nombre or x_nombre_negocio,
                                        'default_street': street,
                                        'default_is_company': type == 'opportunity' and contact_name == False,
                                        'default_company_name': type == 'opportunity' and partner_name,
                                        'default_street2': street2,
                                        'default_city': city,
                                        'default_title': title,
                                        'default_state_id': state_id,
                                        'default_zip': zip,
                                        'default_country_id': country_id,
                                        'default_function': function,
                                        'default_phone': phone,
                                        'default_mobile': mobile,
                                        'default_email': email_from,
                                        'default_team_id': team_id,
                                        'default_doctype': doctype,
                                    }"
                                />
                            </group>
            </xpath>

            <field name="team_id" position="after">
                <field name="tamemp"/>
                <field name="linea" widget="many2many_tags"/>
                <field name="sec"/>
                <field name="client"/>
                <field name="com"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="opportunity_form_view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="tamemp"/>
                <field name="linea" widget="many2many_tags"/>
                <field name="sec"/>
                <field name="client"/>
                <field name="com"/>
            </field>
        </field>
    </record>
</odoo>
